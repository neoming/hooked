<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp"
    android:paddingBottom="4dp"
    android:layout_marginTop="2dp"
    android:paddingStart="16dp"
    android:paddingEnd="25dp"
    android:background="@android:color/white">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@drawable/avatar"/>

    <TextView
        android:id="@+id/username"
        android:layout_marginStart="16dp"
        android:layout_alignTop="@id/avatar"
        android:layout_toEndOf="@id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/primary_text_light"
        android:textSize="14sp"
        android:text="Steve Jobs"/>

    <TextView
        android:id="@+id/rateNum"
        android:layout_toStartOf="@id/rate"
        android:layout_alignTop="@id/avatar"
        android:layout_marginEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="14sp"
        tools:text="4"/>
    <ImageView
        android:id="@+id/rate"
        android:layout_alignParentEnd="true"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_icon_rate"
        android:tint="@color/litYellow"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F5F6FB"
        android:layout_alignStart="@id/username"
        android:layout_below="@id/username"
        android:layout_marginTop="5dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="14sp"
            android:text="What do you mean? when you nod your head and you wanna say no"/>

    </android.support.v7.widget.CardView>
</RelativeLayout>